<%- model_class = Item -%>


<div class="col-md-9">
  <h4 class="text-info"><%= @category.name rescue ''%></h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Цена</th>
        <th>К-во</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to truncate("  #{item.name}", length: 17, separator: ' ') , item_path(item) %></td>
          <td><%= truncate("  #{item.description}", length: 17, separator: ' ')  %></td>
          <td><%= item.price %></td>
          <td>
            <% if item.amount < item.red_line %>
              <span class="label label-danger"> <%= item.amount %></span>
            <% else %>
            
              <%= item.amount %>
            <% end %>
            </td>
          <td>
            <%= link_to  'Получить',
              new_transaction_path(:item_id=> item), :class => 'btn btn-default btn-xs' %>
            <%= link_to  'Выдать',
                        new_transaction_path(:item_id=> item), :class => 'btn btn-default btn-xs' %>
            <%#= link_to t('show', :default => t("helpers.links.show")),
                        item_path(item), :class => 'btn btn-default btn-xs' %>
            <%#= link_to t('edit', :default => t("helpers.links.edit")),
                        edit_item_path(item), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                        item_path(item),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Добавить наименованние",
  new_item_path(:category_id => Category.first.id),
            :class => 'btn btn-primary' %>
</div>
  
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">Поиск инвентаря</div>
        <div class="panel-body">
         <%= ransack_simple_form_for @q , :html => { :class => 'form-vertical ' } do |f| %>
              <%= f.input  :category_id_eq ,:collection => Category.all, :label_method => :name, :value_method => :id, :label => "Категория" ,:include_blank => true %>
              <%= f.input  :name_eq  , :label => "Наименование" ,:include_blank => true %>
              <%= f.input  :sku_cont  , :label => "SKU" ,:include_blank => true %>
              <%= f.button :submit, "Поиск", :class => 'btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
        
 
 
 
 

          
          
    
