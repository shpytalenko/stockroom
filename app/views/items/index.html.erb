<%- model_class = Item -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
</div>
<div class="col-md-8">
  <h4 class="text-info"><%= @category.name rescue ''%></h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Название</th>
        <th>Описание</th>
        <th>Цена</th>
        <th>К-во</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.id, item_path(item) %></td>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
          <td><%= item.amount %></td>
          <td>
            <%= link_to  'Получить',
              new_transaction_path(:item_id=> item), :class => 'btn btn-default btn-xs' %>
            <%= link_to  'Выдать',
                        new_transaction_path(:item_id=> item), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('show', :default => t("helpers.links.show")),
                        item_path(item), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('edit', :default => t("helpers.links.edit")),
                        edit_item_path(item), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                        item_path(item),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

